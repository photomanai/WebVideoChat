<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Görüntülü Toplantı</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="container">
      <div class="main-content">
        <h1>Görüntülü Toplantı</h1>
        <div class="join-section">
          <input
            type="text"
            id="userName"
            placeholder="Adınızı girin"
            maxlength="20"
          />
          <input
            type="text"
            id="roomId"
            placeholder="Oda ID'si girin veya oluşturun"
            maxlength="10"
          />
          <button id="joinBtn">Odaya Katıl</button>
          <button id="createBtn">Yeni Oda Oluştur</button>
        </div>
        <div class="info">
          <p>• Oda ID'si paylaşarak arkadaşlarınızı davet edebilirsiniz</p>
          <p>• Kamera ve mikrofon izni vermeniz gerekecek</p>
          <p>• En az 2 kişi olduğunda görüntülü görüşme başlar</p>
        </div>
      </div>
    </div>

    <script>
      const userNameInput = document.getElementById("userName");
      const roomIdInput = document.getElementById("roomId");
      const joinBtn = document.getElementById("joinBtn");
      const createBtn = document.getElementById("createBtn");

      // Yeni oda oluştur
      createBtn.addEventListener("click", () => {
        const roomId = generateRoomId();
        roomIdInput.value = roomId;
      });

      // Odaya katıl
      joinBtn.addEventListener("click", () => {
        const userName = userNameInput.value.trim();
        const roomId = roomIdInput.value.trim();

        if (!userName) {
          alert("Lütfen adınızı girin");
          return;
        }

        if (!roomId) {
          alert("Lütfen oda ID'si girin");
          return;
        }

        window.location.href = `/room/${roomId}?name=${encodeURIComponent(
          userName
        )}`;
      });

      // Enter tuşu ile katılma
      [userNameInput, roomIdInput].forEach((input) => {
        input.addEventListener("keypress", (e) => {
          if (e.key === "Enter") {
            joinBtn.click();
          }
        });
      });

      // Random oda ID oluştur
      function generateRoomId() {
        return Math.random().toString(36).substring(2, 8).toUpperCase();
      }
    </script>
  </body>
</html>
